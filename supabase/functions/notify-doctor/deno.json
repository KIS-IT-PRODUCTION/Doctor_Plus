{
  "compilerOptions": {
    "lib": ["deno.ns", "esnext"], 
    "strict": true                
  },
  "imports": {
  },
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any"] 
    }
  },
  "tasks": {
    "start-notify-doctor": "deno run --allow-net --allow-env supabase/functions/notify-doctor/index.ts"
  },
  "exclude": [
    "node_modules",
    "dist"          
  ],
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true
    }
  }
}